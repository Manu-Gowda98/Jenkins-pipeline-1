pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo "Building the project..."
                sh 'sleep 2'
            }
        }
        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'sleep 2'
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying application..."
                sh 'sleep 2'
            }
        }
    }
}
